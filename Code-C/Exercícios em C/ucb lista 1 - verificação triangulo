#include <stdio.h>
int main(){
    int lado1, lado2, lado3;

    printf("Digite e lados de um triangulo para saber se ele e verdadeiro ou nao.\n");
    
    printf("lado 1:\n");
    scanf("%d", &lado1);
    
    printf("lado 2\n");
    scanf("%d", &lado2);

    printf("lado 3.\n");
    scanf("%d", &lado3);
// para um triangulo ser verdadeiro Ã© necessario dois lados somados ser maior que o 3 lado 
    if(lado1 + lado2 > lado3 && lado1 + lado3 > lado2 && lado2 + lado3 > lado1){ 
        printf("Esse triangulo e verdadeiro");
    }else{
        printf("Esse triangulo e falso");
    }
}

//Classe 1
package Produto;

public class Produto {
    String nome;
    double preco;
    double desconto;
}

//Classe 2
package Produto;

import Produto.Produto;

public class PrimeiraClasse {
    public static void main(String[] args) {

        Produto p1 = new Produto();
        p1.nome = "laptop";
        p1.preco = 5999.90;
        p1.desconto = 0.15;

        double totalComDesconto = p1.preco * (1 - p1.desconto);

        System.out.println("Nome: " + p1.nome);
        System.out.println("Pre√ßo: " + p1.preco);
        System.out.println("Total: " + totalComDesconto);

    }

}
